<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Splash Screen theme. -->
    <style name="Theme.Popcorn.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">?attr/backgroundColor</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_pop_corn</item>
        <item name="postSplashScreenTheme">@style/Theme.Popcorn</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.Popcorn" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
        <!--        <item name="android:windowBackground">@color/white</item>
                <item name="android:textColor">@color/black</item>
                <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>

    <style name="Theme.Popcorn.TranslucentStatus" parent="Theme.Popcorn">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">@color/material_gray</item>
        <item name="colorPrimaryVariant">@color/material_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

