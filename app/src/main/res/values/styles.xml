<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/button_background</item>
        <item name="android:layout_width">@dimen/button_width</item>
    </style>

    <style name="ButtonWhiteStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/button_background_white</item>
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleSignupStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/title_signup</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="TitleLists" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/title_lists</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="InfoTitleExpanded" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="InfoTitleCollapsed" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextInfo" parent="@android:style/TextAppearance">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CardViewStyle" parent="Theme.MaterialComponents.DayNight">
        <item name="cornerRadius">@dimen/default_corner_radius</item>
        <item name="cardElevation">@dimen/default_elevation</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardBackgroundColor">@color/dark_gray</item>
    </style>
</resources>